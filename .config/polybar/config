[bar/example]
monitor = eDP-1
width = 100%
height = 40


background = #aa0E0E0E
foreground = #ccffffff


line-color = ${bar/example.background}
line-size = 16

spacing = 2
padding-right = 5
module-margin = 4

font-1 = SanFrancisco-Regular:size=16;0
font-0 = FontAwesome:size=16;0

modules-left = i3 mpd
modules-center = date
modules-right = volume backlight wireless-network vpn  battery

tray-position = right
tray-padding = 2
tray-detached = true
tray-maxsize = 22
tray-offset-x = 0
tray-offset-y = 1040
;tray-padding = 0
tray-scale = 1.0

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

